# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control!

# Required: Your application secret key (generate a random string)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET=your-super-secret-random-key-here

# Required: Database connection URL
# PostgreSQL format: postgresql://username:password@hostname:port/database
# SQLite format: sqlite:///path/to/database.db
DATABASE_URL=postgresql://username:password@hostname:port/database

# Optional: Flask environment (development/production)
FLASK_ENV=production

# Optional: Database connection details (if not using DATABASE_URL)
PGUSER=your_db_username
PGPASSWORD=your_db_password  
PGHOST=your_db_host
PGPORT=5432
PGDATABASE=your_db_name

# Optional: For Railway deployment
RAILWAY_STATIC_URL=/static
RAILWAY_VOLUME_MOUNT_PATH=/app/data

# Optional: For Render deployment  
RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# Optional: For Fly.io deployment
FLY_APP_NAME=your-app-name
FLY_REGION=iad